# Memexia Backend Environment Configuration
# Copy this file to .env and modify as needed

# ===================
# Security Settings
# ===================
# IMPORTANT: Change these in production!
SECRET_KEY=your-secret-key-keep-it-secret
SUPERUSER_PASSWORD=admin123

# ===================
# Graph Database
# ===================
# Options: "kuzu" (embedded, default) or "nebula" (distributed)
GRAPH_DB_TYPE=kuzu

# Kuzu Settings (embedded database)
KUZU_DB_PATH=./data/kuzu_db

# NebulaGraph Settings (only needed if GRAPH_DB_TYPE=nebula)
NEBULA_HOST=127.0.0.1
NEBULA_PORT=9669
NEBULA_USER=root
NEBULA_PASSWORD=nebula

# ===================
# ChromaDB Settings
# ===================
CHROMA_DB_PATH=./data/chroma_db

# ===================
# Model Settings
# ===================
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ===================
# SQL Database
# ===================
SQLALCHEMY_DATABASE_URL=sqlite:///./data/memexia.db

# ===================
# JWT Settings
# ===================
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================
# Email Settings
# ===================
ENABLE_EMAIL_VERIFICATION=false
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=user@example.com
SMTP_PASSWORD=password
EMAIL_FROM=noreply@memexia.local
FRONTEND_URL=http://localhost:5173

# ===================
# Superuser Settings
# ===================
SUPERUSER_USERNAME=admin
SUPERUSER_EMAIL=admin@memexia.local

# ===================
# Logging
# ===================
LOG_LEVEL=INFO

# ===================
# OpenAI API Settings
# ===================
# Supports OpenAI-compatible APIs (OpenAI, Azure OpenAI, local models like Ollama, etc.)
# Leave empty to use mock AI expansion
OPENAI_API_KEY=
# Base URL for OpenAI-compatible API
# - OpenAI: https://api.openai.com/v1 (default)
# - Azure: https://YOUR-RESOURCE-NAME.openai.azure.com/
# - Ollama: http://localhost:11434/v1
# - Other compatible providers as needed
OPENAI_BASE_URL=https://api.openai.com/v1
# Model to use for expansion
OPENAI_MODEL=gpt-4o-mini
# Maximum tokens for AI response
OPENAI_MAX_TOKENS=2048
# Temperature for AI responses (0.0 = deterministic, 1.0 = creative)
OPENAI_TEMPERATURE=0.7
